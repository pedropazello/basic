<h1>Grupo</h1>

<div class="row">
  <div class="col-sm-offset-1 col-sm-2">
    <label>Nome:</label>
  </div>
  <div class="col-sm-9">
    <%= @group.name %>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-11">
    <label>Usu√°rios:</label>
  </div>
  <table class="table table-condensed table-hover table-striped col-sm-offset-2 col-sm-10">
    <thead>
      <tr>
        <th><%= t('activerecord.attributes.user.first_name') %></th>
        <th><%= t('activerecord.attributes.user.last_name') %></th>
        <th>Email</th>
      </tr>
    </thead>
    <tbody>
      <% @group.users.each do |user| %>
        <tr>
          <td><%= user.first_name%></td>
          <td><%= user.last_name%></td>
          <td><%= user.email%></td>
        </tr>
      <%end %>
    </tbody>
  </table>
</div>
